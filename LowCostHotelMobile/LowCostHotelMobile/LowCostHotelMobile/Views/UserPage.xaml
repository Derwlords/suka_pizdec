<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LowCostHotelMobile.Views.UserPage"
             Title="Cabinet">

    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="UserName" FontSize="Medium" />
            <Label Text="{Binding FullName}" FontSize="Small"/>
            <Label Text="Email" FontSize="Medium" />
            <Label Text="{Binding Email}" FontSize="Small"/>
            <Label Text="Role" FontSize="Medium" />
            <Label Text="{Binding Role}" FontSize="Small"/>
            <Button VerticalOptions="Center" Text="Rooms List" Command="{Binding MoveToRoomsListCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>